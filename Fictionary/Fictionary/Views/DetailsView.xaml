<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fictionary.Views.DetailsView"
             Title="Word Details">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Label Style="{DynamicResource DetailsWord}" Text="{Binding Definition.Word.WordText}"/>
            <Label Style="{DynamicResource DetailsDefinition}" Text="{Binding Definition.DefinitionText}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>